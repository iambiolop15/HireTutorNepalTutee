<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Academics Tutor"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                />

        </RelativeLayout>
        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/Hours"
            android:layout_marginTop="48dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms_arrowColor="@android:color/black"
            app:ms_baseColor="@android:color/black"
            app:ms_arrowSize="16dp"
            app:ms_floatingLabelColor="@android:color/black"
            app:ms_floatingLabelText="How long should each session be?"
            app:ms_hintColor="@android:color/black"
            app:ms_hint="How long should each session be?"
            app:ms_multiline="true"
            app:ms_enableFloatingLabel="true"
            >
        </fr.ganfra.materialspinner.MaterialSpinner>

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/DaysaWeek"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms_arrowColor="@android:color/black"
            app:ms_baseColor="@android:color/black"
            app:ms_arrowSize="16dp"
            app:ms_floatingLabelColor="@android:color/black"
            app:ms_floatingLabelText="How often do you need class?"
            app:ms_hintColor="@android:color/black"
            app:ms_hint="How often do you need class?"
            app:ms_multiline="true"
            app:ms_enableFloatingLabel="true">
        </fr.ganfra.materialspinner.MaterialSpinner>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/PreferredTimeLayout"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/black"
            app:hintEnabled="true"
            >
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/PreferredTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choose your preferred time"
                android:backgroundTint="@android:color/black"
                android:drawablePadding="10dp"
                android:maxLines="1"
                android:inputType="text"
                android:textColor="@android:color/black"
                />


        </android.support.design.widget.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginBottom="50dp"
            >
            <Button

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/NextBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/Button"
                android:text="Next"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                />
        </LinearLayout>
    </LinearLayout>




</FrameLayout>